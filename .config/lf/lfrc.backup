set hidden true
set ignorecase true
set icons false

set previewer previewer

cmd open ${{
	$EDITOR $f
}}

cmd extract ${{
    set -f
    case $f in
        *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
        *.tar.gz|*.tgz) tar xzvf $f;;
        *.tar.xz|*.txz) tar xJvf $f;;
        *.zip) unzip $f;;
        *.rar) unrar x $f;;
        *.7z) 7z x $f;;
    esac
}}

cmd tar ${{
	set -f
	mkdir $1
    cp -r $fx $1
    tar czf $1.tar.gz $1
    rm -rf $1	
}}

cmd gz ${{
	set -f
	echo "HEllo"
	gz -k $1
}}

map <enter> open
